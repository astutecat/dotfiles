#!/bin/bash

# packages.yaml hash: {{ include ".chezmoidata/packages.yaml" | sha256sum }}

echo ""
echo "Installing homebrew packages..."
brew bundle --file=/dev/stdin <<EOF
{{ range .packages.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ if eq .chezmoi.os "darwin" -}}
{{ range .packages.casks -}}
cask {{ . | quote }}
{{ end -}}
{{ end -}}
EOF
